
<%- include("partials/header.ejs") %>
<header>
    <link rel="stylesheet" href="../public/styles/home.css">
    <link rel="stylesheet" href="../public/styles/cart.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</header>
<body class="b">

    <div class="container my-4 postpop rounded-5">
        <div class="p-5 text-center rounded-4">

          <h1 class="mt-5 h1" style="color:white">Welcome Admin </h1>
        </div>
      </div>
        <% if (locals.inventory && inventory.length!=0 ){ %>
          <div class="container my-5">
              <div class="position-relative p-4 text-center rounded-5 postsjumbotron">
                <div class="postscontainer">

                    <%inventory.forEach(i => { %>

                        <div class="d-flex gap-3 w-100 posts align-items-center">
                            <%-i.svg%>
                          <div class="postcontent">
                              <h6 class="mb-0"><%= i.id%>.<%= i.name %></h6>
                              <p class="mb-0 opacity-75"><%=i.description.slice(0, 80) %></p>
                              <div>
                                <span><%=i.quantity%> left</span>
                                <h7>$<%=i.price%></h7>
                              </div>
                          </div>
                          <div class="edit_delete d-flex">
                            <form class="opacity-50 text-nowrap" action="/login/admin/edit/<%= i.id %>" method="GET">
                                <button type="submit">edit</button>
                            </form>
                            <form class="opacity-50 text-nowrap" action="/login/admin/delete/<%= i.id %>" method="POST">
                                <button type="submit">delete</button>
                            </form>
                          </div>
                        </div>
                        <% }) %>
                      <%}%> 
                      <button id="newitem" onclick="window.location='/login/admin/newItem'">new item</button>
                </div>
              </div>
          </div>  

</body>