<%- include("partials/header.ejs") %>
<header>
    <link rel="stylesheet" href="../public/styles/home.css">
    <link rel="stylesheet" href="../public/styles/cart.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</header>
<body class="body">
     <form class="d-flex justify-content-center align-items-center " action="/register" method="POST">
                <div class="Login-box">
                    <div class="pb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="white" class="bi bi-person-hearts" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M11.5 1.246c.832-.855 2.913.642 0 2.566-2.913-1.924-.832-3.421 0-2.566M9 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0m-9 8c0 1 1 1 1 1h10s1 0 1-1-1-4-6-4-6 3-6 4m13.5-8.09c1.387-1.425 4.855 1.07 0 4.277-4.854-3.207-1.387-5.702 0-4.276ZM15 2.165c.555-.57 1.942.428 0 1.711-1.942-1.283-.555-2.281 0-1.71Z"/>
                          </svg>
                    </div>
                    
                    <div>
                        <input type="text" name="username" placeholder="Enter username" required>
                    </div>

                    <div>
                        <input type="text" name="password" placeholder="Enter password" required>
                    </div>

                    <div>
                        <input type="text" name="password_confirm" placeholder="Confrim password" required>
                    </div>
                    
                    <% if(attempt=="failed" &&unique==true){%>

                        <div>
                            <h3 class="text-danger ">Password inputs don't match</h3>
                        </div>

                        <% } else if (attempt!="failed" &&unique==false){%>
                            <div>
                                <h3 class="text-danger ">Username is taken</h3>
                            </div>
                        <% } else if (attempt=="failed" &&unique==false){%>
                            <div>
                                <h3 class="text-danger ">Password inputs don't match</h3>
                            </div>
                            <div>
                                <h3 class="text-danger ">Username is taken</h3>
                            </div>
                        <% } %>       

                    <div>
                        <input id="login-button" type="submit" class="" value="Register"></div>
                </div>
    </form>
  </body>