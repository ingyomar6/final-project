<%- include("partials/header.ejs") %>
<header>
    <link rel="stylesheet" href="../public/styles/home.css">
    <link rel="stylesheet" href="../public/styles/post.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</header>
<body class="body">

    <div class="postSection">
        <form action="/login/admin/newItem" method="POST">
            <div class="inputBoxes mt-3">
                <div class="d-flex justify-content-evenly">
                    <input class="postTitle" type="text" name="name" placeholder="name" maxlength="25" required>
                    <input class="postTitle"  type="number" step="any" name="price" placeholder="price" maxlength="25" required>
                    <input class="postTitle" type="number" step="1" name="quantity" placeholder="quantity" maxlength="25" required>
                </div>
                <div class="d-block">
                    <textarea class="postData" type="text" name="description" placeholder="description" required></textarea>
                    <textarea class="postData" type="text" name="svg" placeholder="Please make sure that svg size is 50*50" required></textarea>
            </div>
            </div>
            <div class="submitBox">
                <input type="submit" class="submitBoxButtons" value="Add item">
            </div>
        </form>
    </div>
  </body>